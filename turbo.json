{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"globalDependencies": [
		"**/.env.local",
		"**/.env"
	],
	"tasks": {
		"build": {
			"dependsOn": [
				"^build"
			],
			"inputs": [
				"$TURBO_DEFAULT$",
				".env*"
			],
			"outputs": [
				".next/**",
				"!.next/cache/**",
				"dist/**"
			],
			"env": [
				"API_BASE_URL",
				"API_LOCAL_URL",
				"API_PREVIEW_SECRET",
				"DRAFT_MODE_SECRET",
				"NEXT_PUBLIC_BASE_URL"
			]
		},
		"lint": {
			"dependsOn": [
				"^lint"
			]
		},
		"check-types": {
			"dependsOn": [
				"^check-types"
			]
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"env": [
				"API_BASE_URL",
				"API_LOCAL_URL",
				"API_PREVIEW_SECRET",
				"DRAFT_MODE_SECRET",
				"NEXT_PUBLIC_BASE_URL"
			]
		}
	}
}